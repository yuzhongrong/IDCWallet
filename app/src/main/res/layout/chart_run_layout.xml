<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="@dimen/dp50"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_runchar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp49"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_below="@+id/head_layout"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/dp38"
            android:layout_height="@dimen/dp38"
            android:layout_marginStart="@dimen/dp15"
            android:src="@mipmap/icon_assets_total" />

        <TextView
            android:id="@+id/btype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp12"
            android:layout_marginTop="@dimen/dp8"
            android:layout_toRightOf="@+id/icon"
            android:text="@string/total_assets"
            android:textColor="@color/tip_black"
            android:textSize="@dimen/dp15" />

        <CheckBox
            android:id="@+id/check_boxone"
            android:layout_width="@dimen/dp16"
            android:layout_height="@dimen/dp16"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dp168"
            android:layout_marginTop="@dimen/dp11"
            android:background="@drawable/select_checkbox"
            android:button="@null" />

    </RelativeLayout>

    <View
        android:id="@+id/run_view"
        style="@style/line"
        android:layout_below="@+id/rl_runchar"
        android:layout_marginLeft="@dimen/dp16" />
</LinearLayout>