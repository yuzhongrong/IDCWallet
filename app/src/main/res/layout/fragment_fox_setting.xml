                android:layout_width="match_parent"
                android:layout_height="@dimen/dp46"
                android:background="@drawable/item_rv_select_bg"
                android:orientation="horizontal"
                android:focusable="true">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp0.5"
                    android:layout_marginLeft="@dimen/dp36"
                    android:background="#DDDDDD" />
                <ImageView
                    android:layout_width="@dimen/dp16"
                    android:layout_height="@dimen/dp16"
                    android:layout_gravity="center"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="@dimen/dp12"
                    android:src="@mipmap/icon_assurer_set" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:text="@string/str_otc_set_assurer"
                    android:singleLine="true"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="@dimen/dp36"
                    android:ellipsize="end"
                    android:textColor="@color/tip_black"
                    android:textSize="@dimen/sp14" />

