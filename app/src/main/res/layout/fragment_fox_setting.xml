                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text=""
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:layout_marginEnd="@dimen/dp32"
                    android:textColor="@color/tip_gray"
                    android:textSize="@dimen/sp14" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/dp12"
                    android:src="@mipmap/img_arrow_right" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ll_share"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp46"
                android:layout_marginTop="@dimen/dp12"
                android:visibility="visible"
                android:background="@drawable/item_rv_select_bg"
                android:orientation="horizontal"
                android:focusable="true">

                <ImageView
                    android:id="@+id/img_share"
                    android:layout_width="@dimen/dp16"
                    android:layout_height="@dimen/dp16"
                    android:layout_gravity="center"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="@dimen/dp12" />

                <TextView
                    android:id="@+id/tv_share"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/str_app_invite_friend"
                    android:singleLine="true"
                    android:layout_centerInParent="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="@dimen/dp36"
                    android:ellipsize="end"
                    android:textColor="@color/tip_black"
                    android:textSize="@dimen/sp14" />

                <TextView
