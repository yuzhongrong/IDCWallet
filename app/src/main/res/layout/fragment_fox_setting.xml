                android:layout_width="match_parent"
                android:layout_height="@dimen/dp46"
                android:layout_marginTop="@dimen/dp12"
                android:background="@drawable/item_rv_select_bg"
                android:orientation="horizontal"
                android:focusable="true">

                <ImageView
                    android:layout_width="@dimen/dp16"
                    android:layout_height="@dimen/dp16"
                    android:layout_gravity="center"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="@dimen/dp12"
                    android:src="@mipmap/icon_pay_set" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:text="@string/str_otc_set_pay_manager"
                    android:singleLine="true"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="@dimen/dp36"
                    android:ellipsize="end"
                    android:textColor="@color/tip_black"
                    android:textSize="@dimen/sp14" />

                <TextView
                    android:id="@+id/payment_method_state_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/str_otc_go_setting"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:layout_marginEnd="@dimen/dp32"
                    android:textColor="@color/tip_gray"
                    android:textSize="@dimen/sp14" />

