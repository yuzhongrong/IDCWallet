                    android:text="@string/title_language"
                    android:singleLine="true"
                    android:layout_centerInParent="true"
                    android:layout_alignParentStart="true"
                    android:paddingBottom="@dimen/dp1"
                    android:layout_marginStart="@dimen/dp36"
                    android:ellipsize="end"
                    android:textColor="@color/tip_black"
                    android:textSize="@dimen/sp14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text=""
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:layout_marginEnd="@dimen/dp32"
                    android:textColor="@color/tip_gray"
                    android:textSize="@dimen/sp14" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/dp12"
                    android:src="@mipmap/img_arrow_right" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ll_user_call_back"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp46"
                android:layout_marginTop="@dimen/dp12"
                android:background="@drawable/item_rv_select_bg"
                android:orientation="horizontal"
                android:focusable="true">

                <ImageView
                    android:layout_width="@dimen/dp18"
                    android:layout_height="@dimen/dp18"
                    android:layout_gravity="center"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:paddingTop="@dimen/dp3"
                    android:layout_marginStart="@dimen/dp11"
                    android:src="@mipmap/icon_user_back" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/user_callback"
                    android:singleLine="true"
                    android:layout_centerInParent="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="@dimen/dp36"
                    android:ellipsize="end"
                    android:textColor="@color/tip_black"
                    android:textSize="@dimen/sp14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text=""
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:layout_marginEnd="@dimen/dp32"
                    android:textColor="@color/tip_gray"
                    android:textSize="@dimen/sp14" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/dp12"
                    android:src="@mipmap/img_arrow_right" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ll_power_indoction"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp46"
                android:background="@drawable/item_rv_select_bg"
                android:orientation="horizontal"
                android:focusable="true">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp0.5"
                    android:layout_marginLeft="@dimen/dp36"
                    android:background="#DDDDDD" />
                <ImageView
                    android:layout_width="@dimen/dp16"
                    android:layout_height="@dimen/dp16"
                    android:layout_gravity="center"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="@dimen/dp12"
                    android:src="@mipmap/icon_power" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/power_induction"
                    android:singleLine="true"
                    android:layout_centerInParent="true"
                    android:layout_alignParentStart="true"
                    android:paddingBottom="@dimen/dp1"
                    android:layout_marginStart="@dimen/dp36"
                    android:ellipsize="end"
                    android:textColor="@color/tip_black"
                    android:textSize="@dimen/sp14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text=""
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:layout_marginEnd="@dimen/dp32"
                    android:textColor="@color/tip_gray"
                    android:textSize="@dimen/sp14" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/dp12"
                    android:src="@mipmap/img_arrow_right" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ll_contract"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp46"
                android:background="@drawable/item_rv_select_bg"
                android:orientation="horizontal"
                android:focusable="true">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp0.5"
                    android:layout_marginLeft="@dimen/dp36"
                    android:background="#DDDDDD" />
                <ImageView
                    android:layout_width="@dimen/dp16"
                    android:layout_height="@dimen/dp16"
                    android:layout_gravity="center"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="@dimen/dp12"
                    android:src="@mipmap/img_contact" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/constract"
                    android:singleLine="true"
                    android:layout_centerInParent="true"
                    android:paddingBottom="@dimen/dp1"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="@dimen/dp36"
                    android:ellipsize="end"
                    android:textColor="@color/tip_black"
                    android:textSize="@dimen/sp14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text=""
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:layout_marginEnd="@dimen/dp32"
                    android:textColor="@color/tip_gray"
                    android:textSize="@dimen/sp14" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/dp12"
