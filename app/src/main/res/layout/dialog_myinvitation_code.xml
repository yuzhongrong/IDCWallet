<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_marginRight="@dimen/dp15"
        android:background="@mipmap/icon_myinvitation"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="@dimen/dp40"
            android:layout_height="@dimen/dp16"
            android:paddingEnd="@dimen/dp14"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/dp15"
            android:src="@mipmap/icon_top_close" />

        <TextView
            android:id="@+id/tv_invitation_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp8"
            android:text=""
            android:layout_marginStart="@dimen/dp15"
            android:layout_marginEnd="@dimen/dp15"
            android:textColor="@color/white"
            android:textSize="@dimen/dp17"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_below="@+id/iv_close" />

        <ImageView
            android:id="@+id/iv_invitation_tag"
            android:layout_width="@dimen/dp220"
            android:layout_height="@dimen/dp40"
            android:layout_marginTop="@dimen/dp18"
            android:src="@mipmap/icon_idcw_share"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tv_invitation_title" />

        <ImageView
            android:id="@+id/iv_invitation_zxing"
            android:layout_width="@dimen/dp160"
            android:layout_height="@dimen/dp160"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp20"
            android:layout_below="@+id/iv_invitation_tag"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/tv_sub_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginStart="@dimen/dp15"
            android:layout_marginEnd="@dimen/dp15"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="@dimen/dp13"
            android:layout_marginTop="@dimen/dp15"
            android:layout_below="@+id/iv_invitation_zxing"
            android:text=""
            android:textColor="@color/white"
            android:layout_marginBottom="@dimen/dp30"/>
    </RelativeLayout>
</LinearLayout>