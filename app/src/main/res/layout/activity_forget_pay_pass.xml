<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/main_set_title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/ll_phone_create"
            android:layout_width="@dimen/dp281"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/ll_select_country"
                android:layout_width="@dimen/dp281"
                android:layout_height="@dimen/dp20"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp53"
                android:clickable="true"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@mipmap/icon_country"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tv_country_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="5"
                    android:gravity="center|left"
                    android:hint="@string/title_select_country"
                    android:text=""
                    android:textColor="@color/tip_black"
                    android:textColorHint="@color/white_gray"
                    android:textSize="@dimen/sp14" />

                <ImageView
                    android:layout_width="@dimen/dp12"
                    android:layout_height="@dimen/dp12"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/dp16"
                    android:src="@mipmap/right_arrow" />

            </LinearLayout>

            <View
                android:layout_width="@dimen/dp281"
                android:layout_height="@dimen/dp0.5"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/dp6"
                android:layout_marginTop="@dimen/dp6"
                android:background="@color/sw_arrow_bg" />

            <LinearLayout
                android:layout_width="@dimen/dp281"
                android:layout_height="@dimen/dp20"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp25"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@mipmap/icon_phone"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tv_country_num"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:text="@string/tv_phone"
                    android:textColor="@color/tip_gray_black"
                    android:textSize="@dimen/sp14" />

                <com.idcg.idcw.widget.InPutEditText
                    android:id="@+id/ed_phone_num"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="4.5"
                    android:background="@null"
                    android:gravity="center|left"
                    android:hint="@string/tv_enter_phone"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:paddingRight="@dimen/dp12"
                    android:singleLine="true"
                    android:textColor="@color/tip_black"
                    android:textColorHint="@color/white_gray"
                    android:textSize="@dimen/sp14" />


            </LinearLayout>

            <View
                android:layout_width="@dimen/dp281"
                android:layout_height="@dimen/dp0.5"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/dp6"
                android:layout_marginTop="@dimen/dp6"
                android:background="@color/sw_arrow_bg" />

            <LinearLayout
                android:layout_width="@dimen/dp281"
                android:layout_height="@dimen/dp20"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp25"
                android:orientation="horizontal">

                <com.idcg.idcw.widget.InPutEditText
                    android:id="@+id/ed_phone_code"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="5.5"
                    android:background="@null"
                    android:gravity="center|left"
                    android:hint="@string/tv_enter_code"
                    android:inputType="number"
                    android:paddingLeft="@dimen/dp15"
                    android:singleLine="true"
                    android:textColor="@color/tip_black"
                    android:textColorHint="@color/white_gray"
                    android:textSize="@dimen/sp14" />

                <TextView
                    android:id="@+id/tv_phone_get_code"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:gravity="center|right"
                    android:paddingRight="@dimen/dp12"
                    android:text="@string/tv_get_code"
                    android:textColor="@color/tip_gray"
                    android:textSize="@dimen/sp14" />

            </LinearLayout>

            <View
                android:layout_width="@dimen/dp281"
                android:layout_height="@dimen/dp0.5"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/dp6"
                android:layout_marginTop="@dimen/dp6"
                android:background="@color/sw_arrow_bg" />

            <Button
                android:id="@+id/btn_phone_next_step"
                android:layout_width="@dimen/dp281"
                android:layout_height="@dimen/dp40"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp36"
                android:background="@drawable/item_gray_black"
                android:clickable="true"
                android:gravity="center"
                android:text="@string/tv_next_more_step"
                android:textAllCaps="false"
                android:textColor="@color/gray_90"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/tv_email_create"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp20"
                android:drawablePadding="@dimen/dp6"
                android:gravity="center"
                android:text="@string/tv_email_verify"
                android:textColor="@color/tipper_blue_color"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_email_create"
            android:layout_width="@dimen/dp281"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:visibility="gone">


            <LinearLayout
                android:layout_width="@dimen/dp281"
                android:layout_height="@dimen/dp19"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp100"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:src="@mipmap/icon_user_set"
                    android:visibility="visible" />

                <com.idcg.idcw.widget.InPutEditText
                    android:id="@+id/ed_email_create"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="4.5"
                    android:background="@null"
                    android:gravity="center|left"
                    android:hint="@string/tv_enter_pay_email"
                    android:paddingRight="@dimen/dp22"
                    android:singleLine="true"
                    android:textColor="@color/tip_black"
                    android:textColorHint="@color/white_gray"
                    android:textSize="@dimen/sp14" />


            </LinearLayout>

            <View
                android:layout_width="@dimen/dp281"
                android:layout_height="@dimen/dp0.5"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/dp6"
                android:layout_marginTop="@dimen/dp6"
                android:background="@color/sw_arrow_bg" />

            <LinearLayout
                android:layout_width="@dimen/dp281"
                android:layout_height="@dimen/dp19"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp25"
                android:orientation="horizontal">

                <com.idcg.idcw.widget.InPutEditText
                    android:id="@+id/ed_email_code"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="5.5"
                    android:background="@null"
                    android:gravity="center|left"
                    android:hint="@string/tv_enter_code"
                    android:inputType="number"
                    android:paddingLeft="@dimen/dp15"
                    android:singleLine="true"
                    android:textColor="@color/tip_black"
                    android:textColorHint="@color/white_gray"
                    android:textSize="@dimen/sp14" />

                <TextView
                    android:id="@+id/tv_email_get_code"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|right"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:paddingRight="@dimen/dp12"
                    android:text="@string/tv_get_code"
                    android:textColor="@color/gray_black"
                    android:textSize="@dimen/sp14" />

            </LinearLayout>

            <View
                android:layout_width="@dimen/dp281"
                android:layout_height="@dimen/dp0.5"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/dp6"
                android:layout_marginTop="@dimen/dp6"
                android:background="@color/sw_arrow_bg" />

            <Button
                android:id="@+id/btn_email_next_step"
                android:layout_width="@dimen/dp281"
                android:layout_height="@dimen/dp40"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp36"
                android:background="@drawable/item_gray_black"
                android:clickable="true"
                android:gravity="center"
                android:text="@string/tv_next_step"
                android:textAllCaps="false"
                android:textColor="@color/gray_90"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/tv_phone_create"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp20"
                android:drawablePadding="@dimen/dp6"
                android:gravity="center"
                android:text="@string/tv_phone_verify"
                android:textColor="@color/tipper_blue_color"
                android:textSize="15sp" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>