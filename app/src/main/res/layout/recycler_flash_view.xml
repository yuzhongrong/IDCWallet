<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:tools="http://schemas.android.com/tools"
                android:background="#FFFFFF">
    <View
        android:id="@+id/view_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp8"
        android:background="#F6F6F6"/>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp110"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_marginTop="@dimen/d10"
                >

    <TextView
        android:id="@+id/tv_time"
        style="@style/Text_12gray_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/d12"
        android:layout_marginTop="@dimen/d4"
        android:drawableLeft="@mipmap/icon_title"
        android:drawablePadding="@dimen/d4"
        android:gravity="center"
        android:textColor="#666666"
        android:text="1小时之前" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/d16"
        android:layout_marginLeft="@dimen/d12"
        android:layout_marginTop="@dimen/dp38"
        android:text="@string/exchange_out"
        android:textColor="#999999"
        android:textSize="@dimen/sp12" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_amount_in"
        android:layout_alignBottom="@+id/tv_amount_in"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:text="@string/exchange_in"
        android:textColor="#999999"
        android:textSize="@dimen/sp12"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/d12"
        android:layout_marginTop="@dimen/dp82"
        android:text="@string/exchange_in_status"
        android:textColor="#999"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/tv_status"
        android:textSize="@dimen/sp12" />

    <TextView
        android:id="@+id/tv_amount_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/d12"
        android:layout_marginTop="@dimen/dp38"
        tools:text="1.3241 BTC"
        android:textColor="#333333"
        android:textSize="@dimen/sp12" />

    <TextView
        android:id="@+id/tv_amount_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/d12"
        android:layout_marginTop="@dimen/dp60"
        android:ellipsize="middle"
        android:gravity="center|right"
        android:singleLine="true"
        tools:text="1.3241 BTC"
        android:textColor="#333333"
        android:textSize="@dimen/sp12" />

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/d12"
        android:layout_marginTop="@dimen/dp82"
        tools:text="完成 (66 个确认)完成 (66 个确认)完成 (66 个确认)"
        android:textColor="#333333"
        android:textSize="@dimen/sp12" />

    <View
        android:id="@+id/view_divider_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d1"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/d12"
        android:background="#e3e3e3" />
</RelativeLayout>
</LinearLayout>