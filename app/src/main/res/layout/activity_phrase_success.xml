<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include layout="@layout/main_wallet_title"/>

    <ImageView
        android:layout_width="@dimen/dp78"
        android:layout_height="@dimen/dp78"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp50"
        android:src="@mipmap/icon_back_phrase"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/back_success"
        android:textSize="@dimen/sp16"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/tip_black"
        android:layout_marginTop="@dimen/dp24"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp60"
        android:layout_marginTop="@dimen/dp16"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/tip_gray_black"
        android:text="@string/back_main_text"
        android:textSize="@dimen/sp12"/>

    <Button
        android:id="@+id/btn_again_back"
        android:layout_width="@dimen/dp245"
        android:layout_height="@dimen/dp40"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp30"
        android:background="@drawable/sw_tainer_blue"
        android:gravity="center"
        android:text="@string/again_back"
        android:textAllCaps="false"
        android:visibility="visible"
        android:textColor="@color/tipper_blue_color"
        android:textSize="@dimen/sp14" />

    <TextView
        android:id="@+id/btn_finish"
        android:layout_width="@dimen/dp245"
        android:layout_height="@dimen/dp40"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp16"
        android:background="@drawable/sw_tipper_blue_bg"
        android:gravity="center"
        android:text="@string/complite"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textSize="@dimen/sp14" />
</LinearLayout>