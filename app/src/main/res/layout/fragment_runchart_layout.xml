<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/smartrefreshlayout"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/head_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40"
        android:background="@color/bar_color"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp19"
            android:layout_alignBaseline="@+id/textView2"
            android:layout_alignBottom="@+id/textView2"
            android:layout_alignParentStart="true"
            android:layout_marginStart="17dp"
            android:text="@string/default_display"
            android:textColor="@color/tip_gray_black"
            android:textSize="@dimen/sp12" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp19"
            android:layout_centerInParent="true"
            android:layout_marginStart="@dimen/dp130"
            android:text="@string/asset_display"
            android:textColor="@color/tip_gray_black"
            android:textSize="@dimen/sp12"


            android:id="@+id/textView2" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp19"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginEnd="@dimen/dp40"
            android:layout_marginLeft="@dimen/dp50"
            android:layout_marginStart="@dimen/dp12"
            android:text="@string/market_display"
            android:textColor="@color/tip_gray_black"
            android:textSize="@dimen/sp12" />


    </RelativeLayout>


    <android.support.v7.widget.RecyclerView

        android:id="@+id/runchart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:layout_below="@+id/run_view"

        />

        </LinearLayout>


    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</LinearLayout>