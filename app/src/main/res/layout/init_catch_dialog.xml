<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="@dimen/dp345"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/title_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp60"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_set_Name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:paddingTop="@dimen/dp16"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="@string/tv_why_catch"
                android:textColor="@color/tip_black"
                android:textSize="@dimen/sp14" />

            <LinearLayout
                android:id="@+id/mr_back_layout"
                android:layout_width="@dimen/dp42"
                android:paddingTop="@dimen/dp16"
                android:layout_alignParentRight="true"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_back"
                    android:layout_width="@dimen/dp12"
                    android:layout_height="@dimen/dp12"
                    android:layout_marginLeft="@dimen/dp12"
                    android:layout_gravity="center"
                    android:src="@mipmap/img_close" />

            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center|left"
            android:textSize="@dimen/sp14"
            android:paddingLeft="@dimen/dp16"
            android:layout_marginTop="@dimen/dp12"
            android:textColor="@color/tip_black"
            android:text="@string/str_send_catch"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center|left"
            android:textSize="@dimen/sp14"
            android:textColor="@color/tip_black"
            android:paddingLeft="@dimen/dp16"
            android:layout_marginTop="@dimen/dp16"
            android:text="@string/str_send_catch_one"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center|left"
            android:textSize="@dimen/sp14"
            android:textColor="@color/tip_black"
            android:paddingLeft="@dimen/dp16"
            android:layout_marginTop="@dimen/dp2"
            android:text="@string/str_send_catch_two"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center|left"
            android:textSize="@dimen/sp14"
            android:textColor="@color/tip_black"
            android:paddingLeft="@dimen/dp16"
            android:layout_marginTop="@dimen/dp2"
            android:text="@string/str_send_other"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center|left"
            android:textSize="@dimen/sp14"
            android:paddingLeft="@dimen/dp16"
            android:layout_marginTop="@dimen/dp16"
            android:textColor="@color/tip_black"
            android:text="@string/str_send_catch_three"/>

        <TextView
            android:id="@+id/catch_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center|left"
            android:textSize="@dimen/sp14"
            android:paddingLeft="@dimen/dp16"
            android:paddingRight="@dimen/dp16"
            android:layout_marginTop="@dimen/dp16"
            android:autoLink="all"
            android:layout_marginBottom="@dimen/dp22"
            android:textColor="@color/tip_black"
            android:text=""/>
    </LinearLayout>


</LinearLayout>