<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="@dimen/dp300"
        android:layout_height="@dimen/dp200"
        android:background="@drawable/dialog_bg"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            android:layout_gravity="center"
            android:gravity="center|bottom"
            android:paddingLeft="@dimen/dp24"
            android:paddingRight="@dimen/dp24"
            android:textSize="@dimen/sp17"
            android:textStyle="bold"
            android:textColor="@color/tip_black"
            android:text="@string/tv_hint"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:layout_marginTop="@dimen/d16"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="@dimen/sp14"
            android:textColor="@color/tip_black"
            android:text="@string/text_ban_error"/>
        <Button
            android:id="@+id/tv_sure"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="@dimen/d28"
            android:background="@drawable/sw_tip_blue_bg"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/tv_sure"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/sp17" />
    </LinearLayout>
</LinearLayout>