<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F7F7F7">

    <include layout="@layout/main_set_title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp168"
        android:background="@color/white"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/ed_free_back"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp168"
            android:background="@null"
            android:padding="@dimen/dp12"
            android:layout_gravity="left|center"
            android:gravity="left|center|top"
            android:maxLength="160"
            android:hint="@string/hint_input_back"
            android:textSize="@dimen/sp14"/>

        <TextView
            android:id="@+id/tv_back_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="160"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:paddingRight="@dimen/dp12"
            android:textSize="@dimen/sp14"
            android:paddingBottom="@dimen/dp12"/>
    </RelativeLayout>

    <foxidcw.android.idcw.common.widget.ClearableEditText
        android:id="@+id/ed_phone_email"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp45"
        android:background="@color/white"
        android:paddingRight="@dimen/dp12"
        android:singleLine="true"
        android:layout_marginTop="@dimen/dp12"
        android:hint="@string/back_input_phone"
        android:textSize="@dimen/sp14"
        android:paddingLeft="@dimen/dp12"
        />

    <TextView
        android:id="@+id/btn_commit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40"
        android:layout_gravity="center"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="@dimen/dp22"
        android:background="@drawable/sw_tipper_blue_bg"
        android:clickable="true"
        android:gravity="center"
        android:text="@string/commit"
        android:textAllCaps="false"
        android:textColor="@color/color_a0a2b1"
        android:textSize="@dimen/dp15" />
</LinearLayout>