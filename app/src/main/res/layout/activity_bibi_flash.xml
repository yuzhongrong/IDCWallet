<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <include layout="@layout/main_set_title"/>

    <LinearLayout
        android:id="@+id/content_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp50"
            android:layout_marginLeft="@dimen/dp12"
            android:layout_marginRight="@dimen/dp12"
            android:layout_marginTop="@dimen/d12">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp50"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/exchange_rate_in_time"
                    android:textSize="@dimen/sp14"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/tv_rate"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="@dimen/sp14"
                    android:textColor="@color/black"/>
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp12"
            android:layout_marginRight="@dimen/dp12"
            android:layout_marginTop="@dimen/d12"
            android:background="@color/gray_90"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/dp10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:text="@string/exchange_out_coin_type"
                        android:textSize="@dimen/sp14"
                        android:textColor="@color/black"/>

                    <ImageView
                        android:src="@drawable/icon_swap_hint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center|right"
                        android:text="@string/exchange_in_coin_type"
                        android:textSize="@dimen/sp14"
                        android:textColor="@color/black"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp5"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/rl_left"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/img_left"
                            android:layout_width="@dimen/dp28"
                            android:layout_height="@dimen/dp28"
                            android:layout_alignParentLeft="true"
                            android:layout_centerInParent="true"
                            />

                        <TextView
                            android:id="@+id/tv_left"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="@dimen/d6"
                            android:layout_toRightOf="@+id/img_left"
                            android:textSize="@dimen/sp14"/>

                        <ImageView
                            android:id="@+id/iv_left_arrow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/d5"
                            android:layout_toRightOf="@id/tv_left"
                            android:src="@drawable/arrow_down"/>
                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/btn_swap"
                        android:layout_width="@dimen/dp30"
                        android:layout_height="@dimen/dp30"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_swap"/>


                    <LinearLayout
                        android:id="@+id/rl_right"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right|center_vertical">

                        <ImageView
                            android:id="@+id/img_right"
                            android:layout_width="@dimen/dp28"
                            android:layout_height="@dimen/dp28"
                            android:layout_centerInParent="true"
                            android:layout_marginRight="@dimen/d6"
                            />

                        <TextView
                            android:id="@+id/tv_right"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_toRightOf="@+id/img_right"
                            android:textSize="@dimen/sp14"/>

                        <ImageView
                            android:id="@+id/iv_right_arrow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/d5"
                            android:layout_toRightOf="@id/tv_right"
                            android:src="@drawable/arrow_down"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="@dimen/dp5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0.5dp"
                        android:layout_weight="1"
                        android:background="#ddd"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="@dimen/dp50"
                        android:layout_weight="1"
                        android:background="#ddd"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp16"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:background="@drawable/amount_et_layout_bg"
                        android:gravity="center_vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:padding="@dimen/dp5"
                        android:layout_height="wrap_content">
                        <foxidcw.android.idcw.common.widget.ClearableEditText
                            android:id="@+id/et_out"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/dp22"
                            android:layout_weight="1"
                            android:textSize="@dimen/sp12"
                            android:paddingRight="@dimen/dp5"
                            android:background="@color/white"
                            android:inputType="numberDecimal"/>
                        <TextView
                            android:id="@+id/tv_left_2"
                            android:textSize="@dimen/sp12"
                            android:textColor="@color/gray_black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <LinearLayout
                        android:background="@drawable/amount_et_layout_bg"
                        android:gravity="center_vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:padding="@dimen/dp5"
                        android:layout_marginLeft="@dimen/dp50"
                        android:layout_height="wrap_content">
                        <foxidcw.android.idcw.common.widget.ClearableEditText
                            android:id="@+id/et_in"
                            android:paddingRight="@dimen/dp5"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/dp22"
                            android:layout_gravity="right"
                            android:layout_weight="1"
                            android:textSize="@dimen/sp12"
                            android:background="@color/white"
                            android:gravity="center_vertical"
                            android:inputType="numberDecimal"/>
                        <TextView
                            android:id="@+id/tv_right_2"
                            android:textSize="@dimen/sp12"
                            android:textColor="@color/gray_black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="@dimen/dp10"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp12"
                        android:text="@string/exchange_balance"
                        android:textColor="@color/amount_tv_text_color"/>
                    <TextView
                        android:id="@+id/tv_balance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp12"

                        android:textColor="@color/amount_tv_text_color"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="@dimen/dp8"
                    android:layout_marginBottom="@dimen/dp10"
                    android:background="#ddd"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/layout_left_msg"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">


                        <TextView
                            android:textSize="@dimen/sp12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/exchange_min"
                            android:textColor="#666"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp6"
                            android:textSize="@dimen/sp12"
                            android:text="@string/exchange_max"
                            android:textColor="#666"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_toRightOf="@id/layout_left_msg"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_min"
                            android:textSize="@dimen/sp12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#666"/>

                        <TextView
                            android:id="@+id/tv_max"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp6"
                            android:textSize="@dimen/sp12"

                            android:textColor="#666"/>
                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/btn_exchange"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp40"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp12"
            android:layout_marginRight="@dimen/dp12"
            android:layout_marginTop="@dimen/dp18"
            android:background="@drawable/btn_enable_state_selector"
            android:enabled="false"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/exchange"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp12"
            android:textSize="@dimen/sp14"
            android:gravity="center"
            android:text="@string/exchange_before_hint"
            android:textColor="@color/red_color"/>
    </LinearLayout>

    <include
        android:visibility="gone"
        layout="@layout/layout_bibi_error"/>
</LinearLayout>