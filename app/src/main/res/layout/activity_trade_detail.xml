<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/main_set_title" />


    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/smartrefreshlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_send"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f7f7f7"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="0.8"
                    android:gravity="center|bottom"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_send_receive"
                        android:layout_width="@dimen/dp16"
                        android:layout_height="@dimen/dp16"
                        android:layout_marginBottom="@dimen/dp4" />

                    <TextView
                        android:id="@+id/tv_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/dp4"
                        android:text=""
                        android:textSize="@dimen/sp17" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.7">
                    <TextView
                        android:id="@+id/tv_type"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/tip_black"
                        android:textSize="@dimen/sp12" />

                    <TextView
                        android:id="@+id/str_zhuan_catch"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/tv_zhuan_catch"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:textSize="@dimen/sp12"
                        android:textColor="@color/red_color"
                        android:drawablePadding="@dimen/dp4"
                        android:visibility="gone"
                        android:drawableRight="@drawable/icon_red_catch"/>
                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="@dimen/dp12"
                    android:layout_marginRight="@dimen/dp12"
                    android:layout_marginTop="6dp"
                    android:layout_weight="1.8"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:background="@drawable/blue_bold_item_dw"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:layout_weight="1.2"
                            android:gravity="center|bottom"
                            android:text="@string/send_address"
                            android:textColor="@color/tip_gray_black"
                            android:textSize="@dimen/sp12" />

                        <TextView
                            android:id="@+id/tv_receive_address"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:layout_weight="2.5"
                            android:gravity="center"
                            android:padding="@dimen/dp4"
                            android:text=""
                            android:ellipsize="end"
                            android:maxLines="3"
                            android:textColor="@color/tip_black"
                            android:textSize="@dimen/sp12" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:src="@mipmap/img_trade_detail">

                    </ImageView>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:background="@drawable/blue_bold_item_dw"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:layout_weight="1.2"
                            android:gravity="center|bottom"
                            android:text="@string/receive_address"
                            android:textSize="@dimen/sp12" />

                        <TextView
                            android:id="@+id/tv_send_address"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:layout_weight="2.5"
                            android:gravity="center"
                            android:padding="@dimen/dp4"
                            android:text=""
                            android:textColor="@color/tip_black"
                            android:textSize="@dimen/sp12" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginRight="@dimen/dp12"
                    android:layout_marginTop="@dimen/dp8"
                    android:layout_marginLeft="@dimen/dp12"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="0.5"
                        android:gravity="center|left"
                        android:text="TxID"
                        android:textColor="@color/tip_gray_black" />

                    <TextView
                        android:id="@+id/tx_id"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:gravity="center|right"
                        android:text=""
                        android:textColor="@color/tip_black"
                        android:textSize="@dimen/sp12" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/dp12"
                    android:layout_marginLeft="@dimen/dp12"
                    android:layout_weight="1"
                    android:gravity="right|center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/btn_block"
                        android:layout_width="wrap_content"
                        android:paddingLeft="@dimen/dp6"
                        android:paddingRight="@dimen/dp6"
                        android:layout_height="@dimen/dp22"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/dp10"
                        android:background="@drawable/item_check_ripple"
                        android:gravity="center"
                        android:text="@string/tv_block"
                        android:textSize="@dimen/sp12"
                        android:textColor="@drawable/trade_tipper_blue_color" />

                    <TextView
                        android:id="@+id/btn_copy"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp22"
                        android:paddingLeft="@dimen/dp6"
                        android:paddingRight="@dimen/dp6"
                        android:layout_gravity="center"
                        android:background="@drawable/item_check_ripple"
                        android:gravity="center"
                        android:text="@string/copy_id"
                        android:textSize="@dimen/sp12"
                        android:textColor="@drawable/trade_tipper_blue_color" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="@dimen/dp12"
                android:layout_weight="0.8"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="@dimen/dp12"
                    android:layout_marginRight="@dimen/dp12"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="0.8"
                        android:gravity="center|left"
                        android:text="@string/tx_free"
                        android:textColor="@color/tip_gray_black"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tv_free"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:gravity="center|right"
                        android:text=""
                        android:textColor="@color/tip_black"
                        android:textSize="13sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="@dimen/dp12"
                    android:background="@color/sw_arrow_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="@dimen/dp12"
                    android:layout_marginRight="@dimen/dp12"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1.5"
                        android:gravity="center|left"
                        android:text="@string/sure_area"
                        android:textColor="@color/tip_gray_black"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tv_area"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="5"
                        android:gravity="center|right"
                        android:text=""
                        android:textColor="@color/tip_black"
                        android:textSize="13sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="@dimen/dp12"
                    android:background="@color/sw_arrow_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="@dimen/dp12"
                    android:layout_marginRight="@dimen/dp12"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="0.8"
                        android:gravity="center|left"
                        android:text="@string/sure_count"
                        android:textColor="@color/tip_gray_black"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tv_confirm"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:gravity="center|right"
                        android:text=""
                        android:textColor="@color/tip_black"
                        android:textSize="13sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="@dimen/dp12"
                    android:background="@color/sw_arrow_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="@dimen/dp12"
                    android:layout_marginRight="@dimen/dp12"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="0.8"
                        android:gravity="center|left"
                        android:text="@string/trade_time"
                        android:textColor="@color/tip_gray_black"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:gravity="center|right"
                        android:text=""
                        android:textColor="@color/tip_black"
                        android:textSize="13sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="@dimen/dp12"
                    android:background="@color/sw_arrow_line" />

                <LinearLayout
                    android:id="@+id/ll_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_weight="0.6"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:layout_gravity="center"
                        android:gravity="center|left"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center|left"
                            android:text="@string/description"
                            android:textColor="@color/tip_gray_black"
                            android:textSize="@dimen/sp12" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center|left"
                            android:text="@string/can_edit"
                            android:textColor="@color/common_black"
                            android:textSize="@dimen/sp10" />
                    </LinearLayout>


                    <foxidcw.android.idcw.common.widget.ClearableEditText
                        android:id="@+id/ed_back_up"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="4.5"
                        android:layout_marginRight="@dimen/dp4"
                        android:background="@null"
                        android:drawablePadding="@dimen/dp10"
                        android:maxLength="50"
                        android:gravity="center|right"
                        android:hint="@string/fifty_content"
                        android:imeOptions="actionDone"
                        android:text=""
                        android:textColorHint="@color/gray_black"
                        android:textColor="@color/tip_black"
                        android:textSize="@dimen/sp12" />

                    <TextView
                        android:id="@+id/btn_finish"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.5"
                        android:padding="@dimen/dp4"
                        android:clickable="true"
                        android:background="@drawable/sw_tianer_blue_bg"
                        android:gravity="center"
                        android:text="@string/finish_com"
                        android:textSize="@dimen/sp10"
                        android:textColor="@color/white" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</LinearLayout>