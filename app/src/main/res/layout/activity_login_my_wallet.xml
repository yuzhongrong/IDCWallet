<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/main_wallet_title" />

    <LinearLayout
        android:layout_width="@dimen/dp290"
        android:layout_height="@dimen/dp20"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp32"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/icon_user_set" />

        <com.idcg.idcw.widget.InPutEditText
            android:id="@+id/ed_wallet_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="4.5"
            android:background="@null"
            android:gravity="center|left"
            android:hint="@string/wallet_name"
            android:inputType="text"
            android:maxLength="16"
            android:paddingRight="@dimen/dp18"
            android:textColor="@color/tip_black"
            android:textColorHint="@color/white_gray"
            android:textSize="@dimen/sp14" />

    </LinearLayout>

    <View
        android:layout_width="@dimen/dp280"
        android:layout_height="0.5dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp6"
        android:background="@color/sw_arrow_bg" />

    <LinearLayout
        android:layout_width="@dimen/dp290"
        android:layout_height="@dimen/dp20"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp25"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/icon_pass" />

        <com.idcg.idcw.widget.InPutEditText
            android:id="@+id/ed_wallet_pass"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="3.5"
            android:background="@null"
            android:gravity="center|left"
            android:hint="@string/wallet_password"
            android:inputType="textPassword"
            android:maxLength="16"
            android:singleLine="true"
            android:textColor="@color/tip_black"
            android:textColorHint="@color/white_gray"
            android:textSize="@dimen/sp14" />

        <ImageView
            android:id="@+id/img_invisible_pass"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:paddingRight="@dimen/dp2"
            android:src="@mipmap/img_pass_invisible" />
    </LinearLayout>

    <View
        android:layout_width="@dimen/dp280"
        android:layout_height="0.5dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp6"
        android:background="@color/sw_arrow_bg" />

    <LinearLayout
        android:id="@+id/ll_find_assets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|right"
        android:layout_marginTop="@dimen/dp16"
        android:clickable="true"
        android:gravity="right"
        android:layout_marginRight="@dimen/dp40"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_forget_pass"
            android:textColor="@color/white_gray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/tv_find_money"
            android:textColor="@color/tian_tip_blue" />
    </LinearLayout>


    <Button
        android:id="@+id/btn_login_wallet"
        android:layout_width="@dimen/dp280"
        android:layout_height="@dimen/dp40"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp32"
        android:background="@drawable/item_gray_black"
        android:clickable="true"
        android:gravity="center"
        android:text="@string/tv_login"
        android:textAllCaps="false"
        android:textColor="@color/gray_90"
        android:textSize="@dimen/sp16" />

</LinearLayout>