<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/main_set_title" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="36dp"
        android:gravity="center"
        android:textColor="@color/tip_black"
        android:text="@string/tv_phrase_one"
        android:textSize="16sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/tip_black"
        android:text="@string/tv_phrase_two"
        android:textSize="16sp" />

    <FrameLayout
        android:layout_width="@dimen/d197"
        android:layout_height="@dimen/d197"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/d36"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_phrase_progress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@mipmap/icon_phrase_one" />

        <TextView
            android:id="@+id/tv_phrase"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text=""
            android:textColor="@color/tian_tip_blue"
            android:textSize="@dimen/d22"
            android:textStyle="bold" />

    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/d45"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_last_step"
            android:layout_width="@dimen/d241.5"
            android:layout_height="@dimen/d40"
            android:layout_gravity="center"
            android:background="@drawable/back_tipper_blue"
            android:gravity="center"
            android:layout_marginBottom="@dimen/d20"
            android:text="@string/previous_word"
            android:textAllCaps="false"
            android:visibility="invisible"
            android:textColor="@color/tipper_blue_color"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_next_step"
            android:layout_width="@dimen/d241.5"
            android:layout_height="@dimen/d40"
            android:layout_marginBottom="@dimen/d6"
            android:layout_gravity="center"
            android:background="@drawable/sw_tipper_blue_bg"
            android:gravity="center"
            android:text="@string/next_word"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>


</LinearLayout>