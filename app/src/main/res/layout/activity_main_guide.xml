<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll_page"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_old_version_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_old_version"
        android:layout_alignParentRight="true"
        android:paddingTop="@dimen/dp40"
        android:paddingRight="@dimen/dp26"
        android:textColor="@color/tipper_blue_color"
        android:textSize="@dimen/sp15"/>

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gif_bg"
        android:layout_width="@dimen/dp223"
        android:layout_height="@dimen/dp223"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/dp108"
        android:layout_alignParentTop="true"
        android:src="@drawable/icon_app_gif"/>

    <ImageView
        android:layout_below="@+id/gif_bg"
        android:layout_width="@dimen/dp172"
        android:layout_centerHorizontal="true"
        android:layout_height="@dimen/dp22"
        android:layout_marginTop="@dimen/dp28"
        android:src="@mipmap/icon_text_logo"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/btn_create_wallet"
            android:layout_width="@dimen/dp223"
            android:layout_height="@dimen/dp40"
            android:layout_gravity="center"
            android:background="@drawable/sw_ripple_btn_bg"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/tv_create_wallet"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/dp15" />

        <TextView
            android:id="@+id/btn_phrase_recovery"
            android:layout_width="@dimen/dp223"
            android:layout_height="@dimen/dp40"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/dp60"
            android:layout_marginTop="@dimen/dp22"
            android:background="@drawable/sw_ripple_blue"
            android:gravity="center"
            android:textAllCaps="false"
            android:text="@string/str_guide_phrase"
            android:textColor="@color/tipper_blue_color"
            android:textSize="@dimen/dp15" />
    </LinearLayout>


</RelativeLayout>