<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp230"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/base_white_button"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv"
        android:layout_width="@dimen/dp30"
        android:layout_height="@dimen/dp30"
        android:layout_marginTop="@dimen/dp12"
        android:src="@mipmap/common_fingerprint_icon" />

    <TextView
        android:layout_width="240dp"
        android:layout_height="22dp"
        android:layout_marginTop="17dp"
        android:gravity="center_horizontal"
        android:text="传化钱包的Touch ID"
        android:textColor="#FF000000"
        android:textSize="17dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_msg"
        android:layout_width="@dimen/dp230"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp12"
        android:gravity="center_horizontal"
        android:text="@string/touch_pay"
        android:textColor="#FF000000"
        android:textSize="@dimen/dp15" />

    <TextView
        android:id="@+id/verify_touch_id"
        android:layout_width="@dimen/dp230"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp6"
        android:gravity="center_horizontal"
        android:text="@string/touch_pay_less"
        android:textSize="@dimen/dp12" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp0.5"
        android:layout_marginTop="@dimen/dp16"
        android:background="#FFD9D9D9"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/ll_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp42"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/base_white_button"
            android:text="@string/str_cancel"
            android:textAllCaps="false"
            android:textColor="@color/color_0076FF" />


        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/base_white_button"
            android:text="@string/inout_pass"
            android:textAllCaps="false"
            android:textColor="@color/color_0076FF"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>
