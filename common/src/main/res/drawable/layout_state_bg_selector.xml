<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <layer-list>
            <item android:left="-1dp"
                android:right="-1dp"
                android:top="-1dp">
                <shape>
                    <stroke android:width=".5dp" android:color="@color/tip_black"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_focused="true">
        <layer-list>
            <item android:left="-1dp"
                android:right="-1dp"

                android:top="-1dp">
                <shape>
                    <stroke android:width=".5dp" android:color="@color/tian_tip_blue"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item
                android:left="-1dp"
                android:right="-1dp"
                android:top="-1dp">
                <shape>
                    <stroke android:width=".5dp" android:color="@color/a_a0a5ab"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>