<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/accept_buy_or_sell"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp44"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/str_item_curr_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1.5"
                android:gravity="center|left"
                android:paddingLeft="@dimen/dp12"
                android:text=""
                android:textSize="@dimen/sp12" />

            <TextView
                android:id="@+id/str_item_curr_up"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="3"
                android:singleLine="true"
                android:paddingRight="@dimen/dp3"
                android:ellipsize="end"
                android:gravity="center|left"
                android:text=""
                android:textSize="@dimen/sp12" />



            <ImageView
                android:id="@+id/img_curr_more"
                android:layout_width="@dimen/dp18"
                android:layout_height="@dimen/dp18"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/dp13"
                android:src="@mipmap/otc_icon_edit" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_item_dialog_select"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp60"
            android:visibility="gone"
            android:background="@color/c_F7FAFE"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_apply_curr_edit"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp36"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:background="@drawable/otc_ripple_tain_blue"
                android:clickable="true"
                android:gravity="center"
                android:layout_marginLeft="@dimen/dp12"
                android:layout_marginRight="@dimen/dp6"
                android:text="@string/str_otc_edit"
                android:textAllCaps="false"
                android:textColor="@color/tian_tip_blue"
                android:textSize="@dimen/sp15" />

            <TextView
                android:id="@+id/item_apply_curr_delete"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp36"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:background="@drawable/otc_ripple_tain_blue"
                android:clickable="true"
                android:gravity="center"
                android:layout_marginLeft="@dimen/dp6"
                android:layout_marginRight="@dimen/dp12"
                android:text="@string/str_item_del"
                android:textAllCaps="false"
                android:textColor="@color/tian_tip_blue"
                android:textSize="@dimen/sp15" />
        </LinearLayout>

        <View
            android:id="@+id/view_diver"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp0.5"
            android:layout_marginLeft="@dimen/dp12"
            android:background="@color/d_dddddd" />
    </LinearLayout>

</LinearLayout>