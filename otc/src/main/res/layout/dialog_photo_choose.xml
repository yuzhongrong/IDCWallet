<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:gravity="bottom"
    android:orientation="vertical">


    <Button
        android:id="@id/photo_photograph"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/dp10"
        android:text="@string/dialog_photograph"
        android:textAllCaps="false"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp14" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="@color/d_dddddd" />

    <Button
        android:id="@id/photo_albums"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/dp10"
        android:text="@string/dialog_albums"
        android:textAllCaps="false"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp14" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/c_707070" />

    <Button
        android:id="@id/photo_cancel"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/dp10"
        android:text="@string/dialog_cancel"
        android:textAllCaps="false"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp14" />

</LinearLayout>
