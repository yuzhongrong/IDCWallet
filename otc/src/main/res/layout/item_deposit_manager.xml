<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp50"
    android:id="@+id/ll_curr"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp49"
        android:background="@drawable/item_select_color"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_currency_icon"
            android:layout_width="@dimen/dp33"
            android:layout_height="@dimen/dp33"
            android:layout_marginLeft="@dimen/dp12"
            android:layout_gravity="center" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp8"
            android:layout_weight="6"
            android:orientation="vertical">

            <TextView
                android:id="@+id/currency_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center|left"
                android:textColor="@color/tip_black"
                android:textSize="@dimen/sp14"
                android:text=""/>
            <TextView
                android:id="@+id/currency_tag"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:gravity="center|left"
                android:layout_weight="1"
                android:textSize="@dimen/sp12"
                android:text=""/>
        </LinearLayout>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@mipmap/icon_draw_more" />
    </LinearLayout>

    <View
        android:id="@+id/view_diver"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp0.5"
        android:layout_marginLeft="@dimen/dp12"
        android:background="#DDDDDD" />

</LinearLayout>