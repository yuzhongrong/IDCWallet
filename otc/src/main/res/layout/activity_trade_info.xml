<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp2"
    android:layout_marginLeft="@dimen/dp12"
    android:layout_marginRight="@dimen/dp12"
    android:layout_marginTop="@dimen/dp3"
    android:background="@drawable/bg_otc_blue_shdow"
    android:paddingBottom="@dimen/dp2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp5">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp30"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp10"
            android:paddingRight="@dimen/dp10">

            <TextView
                android:id="@+id/orderid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="@string/str_orderid"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/dp12"

                />

            <TextView
                android:id="@+id/ordervalue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/createtime"
                android:layout_toRightOf="@+id/orderid"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/dp12"
                tools:text="A20180202155910001" />

            <TextView
                android:id="@+id/createtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:maxLines="1"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/dp12"
                tools:text="2018-01-29 10:33" />

        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp0.5"
            android:background="@color/color_d1d1d1" />

        <RelativeLayout
            android:id="@+id/root1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp20"
            android:layout_marginTop="@dimen/dp6"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp10"
            android:paddingRight="@dimen/dp10">


            <TextView
                android:id="@+id/buy_or_sell"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/dp12"
                tools:text="买入或者卖出"

                />


            <TextView
                android:id="@+id/number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:maxLines="1"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/dp12"
                tools:text="0.0356 BTC" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/root2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp20"
            android:layout_marginTop="@dimen/dp3"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp10"
            android:paddingRight="@dimen/dp10"

            >

            <TextView

                android:id="@+id/exchange_type_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/dp12"
                tools:text="收款"

                />


            <TextView
                android:id="@+id/exchange_type_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:maxLines="1"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/dp12"
                tools:text="1200.00 CNY" />


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/root3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp20"
            android:layout_marginTop="@dimen/dp3"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp10"
            android:paddingRight="@dimen/dp10"

            >

            <TextView

                android:id="@+id/people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/dp12"
                tools:text="收款"

                />


            <TextView
                android:id="@+id/people_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:maxLines="1"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/dp12"
                tools:text="1200.00 CNY" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/root4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp20"
            android:layout_marginTop="@dimen/dp3"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp10"
            android:paddingRight="@dimen/dp10">


            <TextView

                android:id="@+id/reference_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="@string/str_reference_number"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/dp12"

                />


            <TextView

                android:id="@+id/reference_number_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:maxLines="1"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/dp12"
                tools:text="1314520" />


        </RelativeLayout>

    </LinearLayout>


</FrameLayout>