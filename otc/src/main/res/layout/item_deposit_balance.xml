<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dp120"
    android:layout_height="@dimen/dp78"
    android:layout_gravity="center"
    android:background="@color/white">


    <FrameLayout
        android:id="@+id/item_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/dp6"
        android:background="@drawable/bg_otc_blue_shdow"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_marginTop="@dimen/dp4"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_type"
                android:layout_width="@dimen/dp30"
                android:layout_height="@dimen/dp30"
                android:layout_gravity="center"
                android:paddingRight="@dimen/dp3"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingLeft="@dimen/dp3"
                android:text=""
                android:textColor="@color/tip_black"
                android:textSize="@dimen/sp13" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="@dimen/dp8"
            android:gravity="center|bottom"
            android:singleLine="true"
            android:ellipsize="end"
            android:text=""
            android:textColor="@color/tip_black"
            android:textSize="@dimen/dp13" />

    </FrameLayout>

</RelativeLayout>