<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp40"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_one_step"
                android:layout_width="@dimen/dp16"
                android:layout_height="@dimen/dp16"
                android:layout_gravity="center"
                android:src="@mipmap/icon_one_step"/>

            <View
                android:id="@+id/view_one_step"
                android:layout_width="@dimen/dp67"
                android:layout_height="@dimen/dp1"
                android:layout_gravity="center"
                android:background="@color/d_dddddd"/>

            <ImageView
                android:id="@+id/img_two_step"
                android:layout_width="@dimen/dp16"
                android:layout_height="@dimen/dp16"
                android:layout_gravity="center"
                android:src="@mipmap/otc_icon_two_unselect"/>

            <View
                android:id="@+id/view_two_step"
                android:layout_width="@dimen/dp67"
                android:layout_height="@dimen/dp1"
                android:layout_gravity="center"
                android:background="@color/d_dddddd"/>

            <ImageView
                android:id="@+id/img_three_step"
                android:layout_width="@dimen/dp16"
                android:layout_height="@dimen/dp16"
                android:layout_gravity="center"
                android:src="@mipmap/otc_icon_three_unselect"/>

            <View
                android:id="@+id/view_three_step"
                android:layout_width="@dimen/dp67"
                android:layout_height="@dimen/dp1"
                android:layout_gravity="center"
                android:background="@color/d_dddddd"/>

            <ImageView
                android:id="@+id/img_four_step"
                android:layout_width="@dimen/dp16"
                android:layout_height="@dimen/dp16"
                android:layout_gravity="center"
                android:src="@mipmap/otc_icon_four_unselect"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp16"
            android:layout_marginBottom="@dimen/dp12"
            android:layout_marginRight="@dimen/dp16"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center|top"
                android:textSize="@dimen/sp12"
                android:textColor="@color/tipper_blue_color"
                android:text="@string/str_otc_assurer_buy"/>
            <TextView
                android:id="@+id/tv_two_sell_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center|top"
                android:textSize="@dimen/sp12"
                android:textColor="@color/a_999fa5"
                android:text="@string/str_otc_assurer_sell"/>
            <TextView
                android:id="@+id/tv_three_sell_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:textColor="@color/a_999fa5"
                android:textSize="@dimen/sp12"
                android:gravity="center|top"
                android:text="@string/str_otc_deposit_money"/>
            <TextView
                android:id="@+id/tv_four_sell_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:textSize="@dimen/sp12"
                android:textColor="@color/a_999fa5"
                android:gravity="center|top"
                android:text="@string/str_finish"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>