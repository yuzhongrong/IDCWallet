<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f7f7"
    android:orientation="vertical">

    <include layout="@layout/blue_main_title" />

    <foxidcw.android.idcw.otc.widgets.widget.OTCJimPullBottomView
        android:layout_width="match_parent"
        android:overScrollMode="never"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/item_apply_step_layout" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp16"
                android:background="@color/white"
                android:gravity="center"
                android:paddingTop="@dimen/dp12"
                android:text="@string/str_otc_assener_sell"
                android:textColor="@color/tip_black"
                android:textSize="@dimen/sp14" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp45"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1.5"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/dp12"
                    android:text="@string/str_otc_currency"
                    android:textSize="@dimen/sp12" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1.5"
                    android:gravity="center|left"
                    android:text="@string/str_otc_up_limit"
                    android:textSize="@dimen/sp12" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1.5"
                    android:gravity="center|left"
                    android:text="@string/str_otc_add_premium"
                    android:textSize="@dimen/sp12" />

                <ImageView
                    android:id="@+id/img_one_add"
                    android:layout_width="@dimen/dp20"
                    android:layout_height="@dimen/dp20"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/dp12"
                    android:src="@mipmap/icon_add_currency" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:background="@color/d_dddddd" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_add_curr_hint"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp60"
                    android:layout_gravity="center"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="@string/str_otc_assener_hint"
                    android:visibility="gone" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_sell_curr"
                    android:layout_width="match_parent"
                    android:overScrollMode="never"
                    android:layout_height="wrap_content">

                </android.support.v7.widget.RecyclerView>
            </RelativeLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp16"
                android:background="@color/white"
                android:gravity="center"
                android:paddingTop="@dimen/dp12"
                android:text="@string/str_otc_assener_sell_amount"
                android:textColor="@color/tip_black"
                android:textSize="@dimen/sp14" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp45"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1.5"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/dp12"
                    android:text="@string/str_otc_fr_currency"
                    android:textSize="@dimen/sp12" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1.5"
                    android:gravity="center|left"
                    android:text="@string/str_otc_assener_amount"
                    android:textSize="@dimen/sp12" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1.5"
                    android:gravity="center|left"
                    android:text=""
                    android:textSize="@dimen/sp12" />

                <ImageView
                    android:id="@+id/img_two_add"
                    android:layout_width="@dimen/dp20"
                    android:layout_height="@dimen/dp20"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/dp12"
                    android:src="@mipmap/icon_add_currency" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:background="@color/d_dddddd" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_add_pay_hint"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp60"
                    android:layout_gravity="center"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="@string/str_otc_assener_select_pay"
                    android:textSize="@dimen/sp12"
                    android:visibility="gone" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_sell_otc"
                    android:layout_width="match_parent"
                    android:overScrollMode="never"
                    android:layout_height="wrap_content">

                </android.support.v7.widget.RecyclerView>
            </RelativeLayout>

            <TextView
                android:id="@+id/btn_accept_change_next_step"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp40"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp12"
                android:layout_marginRight="@dimen/dp12"
                android:layout_marginTop="@dimen/dp22"
                android:background="@drawable/item_gray_black"
                android:clickable="true"
                android:gravity="center"
                android:layout_marginBottom="@dimen/dp16"
                android:text="@string/otc_tv_next_more_step"
                android:textAllCaps="false"
                android:textColor="@color/gray_90"
                android:textSize="@dimen/sp15" />

        </LinearLayout>

    </foxidcw.android.idcw.otc.widgets.widget.OTCJimPullBottomView>
</LinearLayout>