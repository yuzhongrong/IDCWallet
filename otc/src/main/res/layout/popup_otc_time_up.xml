<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_pop"
    android:gravity="center">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp37"
        android:layout_marginStart="@dimen/dp37"
        android:layout_marginTop="@dimen/dp140"
        android:background="@color/white"
        android:minHeight="@dimen/dp292"
        app:cardCornerRadius="@dimen/dp5"
        app:elevation="@dimen/dp0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dp20"
            android:paddingEnd="@dimen/dp30"
            android:paddingStart="@dimen/dp30"
            android:paddingTop="@dimen/dp31">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:drawablePadding="@dimen/dp20"
                android:drawableTop="@drawable/otc_icon_times_up"
                android:gravity="center"
                android:text="@string/str_otc_times_up"
                android:textColor="@color/tip_black"
                android:textSize="@dimen/sp16" />

            <TextView
                android:id="@+id/otc_time_up_info_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp6"
                android:gravity="center"
                android:textColor="#FF666666"
                android:textSize="14sp"
                tools:text="很遗憾，未被选中" />

            <Button
                android:id="@+id/otc_time_up_btn"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp40"
                android:layout_marginTop="@dimen/dp30"
                android:background="@drawable/sw_tip_blue_round"
                android:text="@string/ok"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/sp16" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>