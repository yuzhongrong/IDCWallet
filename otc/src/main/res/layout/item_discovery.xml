<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_width="@dimen/dp72"
    android:layout_marginBottom="@dimen/dp6"
    android:layout_marginLeft="@dimen/dp6"
    android:background="@color/white"
    android:layout_height="@dimen/dp93">

    <android.support.v7.widget.CardView
        android:id="@+id/item_root"
        android:layout_width="@dimen/dp60"
        android:layout_height="@dimen/dp60"
        app:cardCornerRadius="@dimen/dp9"
        app:cardElevation="@dimen/dp2"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/dp6"
        android:gravity="center"
        android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_game_logo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:src="@mipmap/icon_vhkd"
                />

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/tv_game_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_below="@+id/item_root"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/dp7"
        android:layout_alignParentBottom="true"
        android:textColor="@color/tip_black"
        android:textSize="@dimen/dp12" />
</RelativeLayout>