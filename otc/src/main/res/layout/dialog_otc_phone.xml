<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/transparent"
    app:cardElevation="@dimen/dp5"
    app:cardCornerRadius="@dimen/dp15"
    android:layout_gravity="center"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/common_select"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp16"
            android:layout_marginTop="@dimen/dp29"
            android:gravity="center_horizontal"
            android:text="18826585609"
            android:textColor="#FF333333"
            android:textSize="@dimen/sp13" />

        <TextView
            android:id="@+id/id_tv_third_pay_state_balance_enough"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp16"
            android:layout_marginTop="@dimen/dp29"
            android:gravity="center_horizontal"
            android:text="@string/balance_enough"
            android:textColor="#FF333333"
            android:textSize="@dimen/sp17"
            android:visibility="gone"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp0.5"
            android:layout_marginTop="@dimen/dp12"
            android:background="#FFD9D9D9"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/ll_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp45"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cancel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/pay_left_coner_bg"
                android:gravity="center"
                android:text="@string/cancel"
                android:textAllCaps="false"
                android:textColor="#ff007aff"
                android:textSize="@dimen/sp17" />

            <View
                android:id="@+id/id_vi_third_pay_middle_line"
                android:layout_width="@dimen/dp0.5"
                android:layout_height="match_parent"
                android:background="#FFD9D9D9" />

            <TextView
                android:id="@+id/cell"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/pay_right_coner_bg"
                android:gravity="center"
                android:text="呼叫"
                android:textAllCaps="false"
                android:textColor="#ff007aff"
                android:textSize="@dimen/sp17"
                android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
